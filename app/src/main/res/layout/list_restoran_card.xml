<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgResto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:padding="16dp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgResto">

            <TextView
                android:id="@+id/tvRestoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resto Name"
                android:textSize="20dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/montserratbold"/>

            <TextView
                android:id="@+id/tvFoodType"
                android:layout_below="@id/tvRestoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratlight"
                android:text="Food Type"/>

            <TextView
                android:id="@+id/tvRestoDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.23 KM"
                android:textSize="14dp"
                android:layout_below="@id/tvFoodType"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserratmedium"/>

            <TextView
                android:id="@+id/tvAvgPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 10000 - Rp 15000"
                android:textSize="14dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/tvRestoDistance"
                android:fontFamily="@font/montserratmedium"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>